package com.douglas.algaworksentrega.api.controller;

import java.util.Arrays;
import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.douglas.algaworksentrega.domain.model.Cliente;

@RestController
public class ClienteController {
	
	@GetMapping("/clientes")
	public List <Cliente> listar(){
		var cliente1 = new Cliente();
		cliente1.setId(1L);
		cliente1.setName("Douglas");
		cliente1.setTelefone("11999333");
		cliente1.setEmail("douglas@email");
		
		var cliente2 = new Cliente();
		cliente1.setId(1L);
		cliente1.setName("Flavia");
		cliente1.setTelefone("11955333");
		cliente1.setEmail("flavia@email");
		
		return Arrays.asList(cliente1,cliente2);
	}
	
}
